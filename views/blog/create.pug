extends ./../layouts/main-layout

block content
    main(style="padding: 2rem")
        a.btn-nav(href="/blog") &larr; Back

        h2.form-title Create blog post
        form.form(action="/blog/create", method="POST")
            if successMessage
                .success-message Blog post created successfully!
            input.form-input(type="text", name="title", placeholder="Title")
            textarea.form-input(name="content", placeholder="Content")
            button.btn(type="submit") Create